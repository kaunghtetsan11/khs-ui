<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KhsUi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sans_semi_condensed</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.KhsUi</item>
    </style>

    <style name="Base.App.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="App.TextStyle.Body1" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_38sp</item>
    </style>

    <style name="App.TextStyle.Body2" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_28sp</item>
    </style>

    <style name="App.TextStyle.Body3" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="App.TextStyle.Body4" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="App.TextStyle.Body5" parent="Base.App.TextStyle">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>



</resources>